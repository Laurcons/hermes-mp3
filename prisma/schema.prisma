generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

enum UserRole {
  admin
  volunteer
}

enum SessionRole {
  admin
  volunteer
  participant
}

enum ChatRoom {
  participants
  volunteers
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
  role     UserRole

  sessions Session[]
}

model Session {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  wsId String?
  userId String? @db.ObjectId
  token String @unique
  isTrackingLocation Boolean @default(false)
  nickname String?
  role SessionRole

  user User? @relation(fields: [userId], references: [id])
  chatMessages ChatMessage[]
  locationEvents LocationEvent[]
}

model ChatMessage {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  timestamp DateTime @default(now())
  sessionId String @db.ObjectId
  room ChatRoom
  text String

  session Session? @relation(fields: [sessionId], references: [id])
}

model LocationEvent {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String @db.ObjectId
  timestamp DateTime
  lat Float
  lon Float
  acc Float

  session Session @relation(fields: [sessionId], references: [id])
}
